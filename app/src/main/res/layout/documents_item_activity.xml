<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/document_item_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/document_container"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/document_checkBox"
            android:layout_width="35dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="-12dp"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/document_image_acticity"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/doc" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/document_name_acticity"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="有有有有有有有"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/document_time_acticity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023-08-06 14:26"
                android:textColor="#808080"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/document_size_acticity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="100KB"
                android:textColor="#808080"
                android:textSize="11dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>